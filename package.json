{
  "name": "spa-boilerplate",
  "version": "1.0.0",
  "description": "In the project directory, you can run:",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack-dev-server --colors --config config/webpack.dev.js",
    "build": "webpack --progress --config config/webpack.prod.js",
    "serve": "serve -s ./build -l 3000",
    "start": "npm run build && npm run serve",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "stylelint": "stylelint src",
    "prettier": "prettier \"src/*.+(js|jsx|json|yml|yaml|css|less|scss|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run stylelint && npm run prettier -- --list-different"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Denis Rostokin",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "file-loader": "^5.0.2",
    "handlebars": "^4.7.2",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^3.2.0",
    "lint-staged": "^10.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "serve": "^11.3.0",
    "style-loader": "^1.1.3",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
